{
  "name": "@skuiggly/use-store",
  "version": "0.1.0",
  "description": "A typesafe global state solution utilizing React hooks and local storage",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "files": [
    "dist"
  ],
  "main": "useStore.cjs",
  "module": "./dist/useStore.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/useStore.js",
      "require": "./dist/useStore.umd.cjs"
    }
  },
  "directories": {
    "lib": "./src/lib"
  },
  "dependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.6.2",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "prettier": "^3.0.3",
    "react-dom": "^18.2.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-dts": "^3.5.3"
  },
  "author": "Skuiggly",
  "license": "MIT"
}
